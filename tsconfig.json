{
  "compileOnSave": false,
  "extends": "./tsconfig.paths.json",
  "compilerOptions": {
    "noEmit": true,
    "strict": true,
    "pretty": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "noEmitHelpers": true,
    "importHelpers": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "checkJs": false,
    "allowJs": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "es2015",
    "target": "esnext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "lib": [
      "dom",
      "esnext"
    ],
    "types": [],
    "typeRoots": [
      "./jspm_packages/npm/@types",
      "./node_modules/@types"
    ],
    "traceResolution": false,
    "plugins": [
      {
        "name": "tslint-language-service"
      }
    ]
  },
  "exclude": [
    "bundle.*",
    "build.*",
    "dist/**",
    "jspm_packages",
    "node_modules"
  ],
  "typeAcquisition": {
    "enable": false
  }
}
